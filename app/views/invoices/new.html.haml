- content_for :header do
  = javascript_include_tag "jquery"
  = javascript_include_tag "jquery.color"
  = javascript_include_tag "rails"
  = javascript_include_tag "application"

- form_for @invoice, :url=>{:action=>"create"} do |f|
  = f.error_messages
  %div{:class=>"span-24 last"}
    %div{:class=>"span-8 from_company"}
      %div{:class=>"span-7"}
        = f.label "Your Company"
        %br
        = f.text_field :by_company
      %div{:class=>"span-7"}
        = f.label "Company's address"
        %br
        = f.text_area :by_address, :rows=>"4"
    %div{:class=>"span-8 to_company"}
      %div{:class=>"span-7"}
        = f.label "Client"
        %br
        = f.text_field :by_company
      %div{:class=>"span-7"}
        = f.label "Client's address"
        %br
        = f.text_area :by_address, :rows=>"4"
    %div{:class=>"span-5 last"}
      %div{:class=>"qmenu"}
        %div{:class=>"qselected"}
        %div{:class=>"qitems"}
          %div{:class=>"qitem"}
            = image_tag "both.png"
          %div{:class=>"qitem"}
            = image_tag "center.png"
          %br
          %div{:class=>"qitem"}
            = image_tag "right.png"
    %div{:class=>"prodserv span-24 last"}
      %h2{:class=>"sectiontitle"} Products/Services
      %div{:class=>"itemhead span-23 last"}
        %div{:class=>"span-7 inameh"}
          Products
        %div{:class=>"span-2 iquantityh"}
          Quantity
        %div{:class=>"span-2 icosth"}
          Cost
        %div{:class=>"span-4 last"}
      - f.fields_for :items do |builder|
        %div{:class=>"itemlist span-24 last"}
          %div{:class=>"span-7 iname"}
            =builder.text_field :name
          %div{:class=>"span-2 iquantity"}
            =builder.text_field :quantity
          %div{:class=>"span-4 icost"}
            =builder.text_field :cost
          %div{:class=>"span-4 last"}

    %div{:class=>"formbuttons span-16"}
      = f.submit 'Create', :class=>"submitbutton"
      or
      %input{:type=>"reset", :value=>"Reset"}
