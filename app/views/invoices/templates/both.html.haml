- content_for :header do 
  = stylesheet_link_tag "template_both"

%div{:class=>"span-24"}
  %div{:class=>"span-11 first"}
    %div{:class=>"bycomp span-11 last"}
      =@invoice.by_company
    %div{:class=>"byaddr span-11 last"}
      !=simple_format(@invoice.by_address)
  %div{:class=>"byaddr span-10 last"}
  %div{:class=>"span-24"}
    %div{:class=>"span-16"}
      %span{:class=>"date"}
        Date:
    %div{:class=>"span-8 last"}
      %div{:class=>"tocomp span-10 last"}
        =@invoice.to_company
      %div{:class=>"toaddr span-10 last"}
        !=simple_format(@invoice.to_address)


%div{:class=>"producthead span-23 last"}
  %div{:class=>"span-14 first"}
    =@invoice.item_title
  %div{:class=>"span-2"}
    =@invoice.cost_title
  %div{:class=>"span-2"}
    =@invoice.quantity_title
  %div{:class=>"span-2"}
    Cost
  %div{:class=>"span-1 last"}
    =@invoice.tax_title

-@total_cost=0
-@total_tax=0
-@invoice.items.each do |product|
  %div{:class=>"eachprod span-23"}
    %div{:class=>"span-14 first"}
      =product.name
    %div{:class=>"span-2"}
      =@invoice.currency + product.cost.to_s
    %div{:class=>"span-2"}
      =product.quantity
    %div{:class=>"span-2"}
      -@product_cost = product.quantity*product.cost
      -@total_cost=@total_cost+@product_cost
      =@invoice.currency + (product.quantity*product.cost).to_s
    %div{:class=>"span-1 last"}
      -@total_tax= @total_cost+((@total_cost/100)*product.tax.to_f)
      =product.tax.to_s + "%"

%div{:class=>"totalhead span-24 last"}
  %div{:class=>"span-16"}
    &nbsp;
  %div{:class=>"span-2"}
    %span{:class=>"bsp"}
      Sub-total
  %div{:class=>"span-3 last"}
    &nbsp;&nbsp;&nbsp;&nbsp;
    = @invoice.currency + @total_cost.to_s
  %div{:class=>"span-16"}
    &nbsp;
  %div{:class=>"span-2"}
    %span{:class=>"bsp"}
      Total tax
  %div{:class=>"span-3 last"}
    &nbsp;&nbsp;&nbsp;&nbsp;
    = @invoice.currency + @total_tax.to_s

%div{:class=>"totalhead span-24 last"}
  
